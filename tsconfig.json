{
    "compilerOptions": {
      "outDir": "./dist/",
      "baseUrl": "./",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "jsx": "react-jsx",
      "noImplicitAny":true,
      "strict": true,
      "sourceMap": true
    },

    "include": ["src"],
    
    "exclude": [
      "node_modules"
    ]
  }